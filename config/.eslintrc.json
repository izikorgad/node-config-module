{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["error", 2, { "SwitchCase": 1 }],
        "quotes": ["error", "single", { "allowTemplateLiterals": true }],
        "semi": [
            "error",
            "always"
        ],
        "no-var": [
            "error"
        ],
        "no-trailing-spaces": 1,
        "eol-last": 0,
        "no-underscore-dangle": 0,
        "no-alert": 2,
        "no-lone-blocks": 0,
        "jsx-quotes": 1,
        "no-unused-vars": 1,
        "no-undef": 1,
        "guard-for-in": 1,
        "no-constant-condition": 1,
        "no-console": 0,
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "variable-name": [
            true,
            "ban-keywords"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ],
        "one-line": [
            true,
            "check-open-brace",
            "check-whitespace"
        ],
        "comment-format": [
            true,
            "check-space"
        ],
        "no-eval": 1,
        "block-spacing": 1,
        "space-before-blocks": [
            "error",
            {
                "functions": "always",
                "keywords": "always",
                "classes": "always"
            }
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "array-bracket-spacing": [
            "error",
            "never"
        ],
        "spaced-comment": [
            "error",
            "always"
        ],
        "space-infix-ops": [
            "error",
            {
                "int32Hint": false
            }
        ]
    }
}